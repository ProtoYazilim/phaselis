{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "paths": {
      "phaselis": [
        "../src"
      ],
      "src/*": [
        "../src/*"
      ],
      "appSrc/*": [
        "../appSrc/*"
      ],
      "appSrc": [
        "../appSrc"
      ]
    },
    "outDir": "./dist/@types",
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "ios",
    "android",
    "documentation",
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../global.d.ts",
    // ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
