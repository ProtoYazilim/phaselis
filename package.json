{
  "name": "phaselis",
  "version": "0.0.17",
  "description": "A powerful, customizable, and beautiful UI component library for React Native applications. Phaselis provides a comprehensive set of pre-built components that help you build stunning mobile applications faster.",
  "source": "./src/index.ts",
  "main": "./dist/commonjs/index.js",
  "module": "./dist/module/index.js",
  "homepage": "https://www.protoyazilim.com/phaselis",
  "repository": {
    "type": "git",
    "url": "https://github.com/ProtoYazilim/phaselis.git"
  },
  "private": true,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/typescript/module/src/index.d.ts",
        "default": "./dist/module/index.js"
      },
      "require": {
        "types": "./dist/typescript/commonjs/src/index.d.ts",
        "default": "./dist/commonjs/index.js"
      }
    }
  },
  "scripts": {
    "test": "jest",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli dist",
    "prepare": "bob build",
    "release": "release-it",
    "generate-theme-interface": "ts-node --project tsconfig.node.json ./scripts/generate-theme-interface.ts"
  },
  "files": [
    "src",
    "tsconfig.node.json",
    "global.d.ts",
    "dist",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "scripts",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ProtoYazilim/phaselis/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "hoist-non-react-statics": "^3.3.2",
    "lodash": "^4.17.21",
    "lucide-react-native": "^0.473.0",
    "react-native-mask-input": "^1.2.3",
    "react-native-picker-select": "^9.3.1"
  },
  "peerDependencies": {
    "@react-native-community/blur": "^4.4.1",
    "@react-native-community/slider": "^4.5.5",
    "@react-native-picker/picker": "^2.11.0",
    "react": "*",
    "react-native": "*",
    "react-native-date-picker": "^5.0.8",
    "react-native-linear-gradient": ">=2.8.0",
    "react-native-reanimated": "^3.16.7",
    "react-native-svg": ">=15.0.0",
    "react-native-unistyles": "^2.20.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native-community/cli": "^15.1.3",
    "@react-native/eslint-config": "^0.73.1",
    "@release-it/conventional-changelog": "^9.0.2",
    "@types/chokidar": "^2.1.7",
    "@types/hoist-non-react-statics": "^3.3.6",
    "@types/jest": "^29.5.5",
    "@types/lodash": "^4.17.14",
    "@types/react": "^18.2.44",
    "@types/react-native": "^0.73.0",
    "chokidar": "^4.0.3",
    "commitlint": "^17.0.2",
    "del-cli": "^5.1.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "react-native-builder-bob": "^0.32.0",
    "release-it": "^17.10.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "resolutions": {
    "@types/react": "^18.2.44"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/dist/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "prettier",
      "@typescript-eslint"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": false,
          "trailingComma": "all"
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "react/react-in-jsx-scope": "off",
      "react-native/no-inline-styles": "off",
      "react/no-unstable-nested-components": "off"
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "dist",
    "targets": [
      "codegen",
      [
        "commonjs",
        {
          "esm": true
        }
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json",
          "esm": true
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "RNPhaselisSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "outputDir": {
      "ios": "ios/generated",
      "android": "android/generated"
    },
    "android": {
      "javaPackageName": "com.phaselis"
    }
  },
  "create-react-native-library": {
    "languages": "js",
    "type": "library",
    "version": "0.45.5"
  },
  "workspaces": [
    "example",
    "packages/*"
  ],
  "packageManager": "yarn@1.22.22"
}
