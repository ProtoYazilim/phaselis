{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "noEmitOnError": true,
    "paths": {
      "phaselis": [
        "./src"
      ],
      "src/*": [
        "./src/*"
      ],
      "appSrc/*": [
        "./appSrc/*"
      ],
      "appSrc": [
        "./appSrc"
      ]
    },
    "outDir": "./dist/@types",
    "esModuleInterop": true
  },
  "exclude": [
    "app/**/*",
    "node_modules",
    "dist",
    "ios",
    "android"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
