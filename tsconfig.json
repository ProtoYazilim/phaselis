{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "paths": {
      "src/*": [
        "./src/*"
      ],
    },
    "outDir": "./dist",
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "ios",
    "android",
    "documentation",
    "./app/**/*",
    "./appSrc/**/*",
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "global.d.ts",
  ]
}