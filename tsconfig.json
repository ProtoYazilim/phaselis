{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "noEmitOnError": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@phaselis/components": [
        "./src/components"
      ],
      "@phaselis/components/*": [
        "./src/components/*"
      ],
      "@phaselis/utils/*": [
        "./src/utils/*"
      ],
      "@phaselis/utils": [
        "./src/utils"
      ],
      "@phaselis/hooks/*": [
        "./src/hooks/*"
      ],
      "@phaselis/hooks": [
        "./src/hooks"
      ],
      "@phaselis/hocs/*": [
        "./src/hocs/*"
      ],
      "@phaselis/hocs": [
        "./src/hocs"
      ],
      "@phaselis/theme/*": [
        "./src/theme/*"
      ],
      "@phaselis/theme": [
        "./src/theme"
      ],
      "@phaselis/types/*": [
        "./src/types/*"
      ],
      "@phaselis/types": [
        "./src/types"
      ],
      "@appSrc/*": [
        "./appSrc/*"
      ],
      "@appSrc": [
        "./appSrc"
      ],
    },
    "outDir": "./dist/@types",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "appSrc/**/*",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
  ]
}